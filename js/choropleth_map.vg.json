{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Death Rate per 100k Population",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer":[
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
    "url": "https://raw.githubusercontent.com/kaiyun94/FIT3179-Week9_Homework/main/js/ne_110m.topojson",
    "format": {"type": "topojson", "feature": "ne_110m"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/kaiyun94/FIT3179-Week9_Homework/main/data/Total_death_rate_per_100k_2019.csv"
        },
        "key": "Country",
        "fields": ["Total_death_rate_per_100k"]
      }
    },
    {"calculate": "datum.Total_death_rate_per_100k", "as": "Total death rate per 100k population"}
  ],
  "mark": {"type": "geoshape", "stroke": "black"},
  "encoding": {
    "color": {
      "field": "Total death rate per 100k population",
      "type": "quantitative",
      "scale": {
        "type": "log",
        "domain": [1, 10, 100],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Total_death_rate_per_100k", "type": "quantitative"}
    ]
  }
    }
  ]  
}